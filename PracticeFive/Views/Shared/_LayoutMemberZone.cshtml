<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - S.H.E.</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/SubPageLayoutVer2.css">
    <link rel="stylesheet" href="~/Content/RescueList.css">
    <link rel="stylesheet" type="text/css" href="css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/Content/memberzonesidebar.css">
</head>
<body>
    <section class="header">
        <nav>
            <a href="Index"><img class="logo" src="/Img/logoSmall.png" alt=""></a>
            <ul class="menu">
                <li>
                    @Html.ActionLink("救援通報", "List", "RescueMember")
                    <ul class="subs">
                        <li class="submenu">@Html.ActionLink("我要通報", "Rescue", "RescueMember")</li>
                        <li class="submenu">@Html.ActionLink("我要救援", "List", "RescueMember")</li>
                    </ul>
                </li>
                <li>
                    @Html.ActionLink("認養資訊", "List", "TransferMember")
                    <ul class="subs">
                        <li class="submenu">@Html.ActionLink("我要送養", "Transfer", "TransferMember")</li>
                        <li class="submenu">@Html.ActionLink("我要認養", "List", "TransferMember")</li>
                    </ul>
                </li>
                <li>
                    @Html.ActionLink("文章分享", "List", "BlogMember")
                    <ul class="subs">
                        <li class="submenu">@Html.ActionLink("救援心得", "ResuceExperience", "BlogMember")</li>
                        <li class="submenu">@Html.ActionLink("認養故事", "TransferStory", "BlogMember")</li>
                    </ul>
                </li>
                <li>@Html.ActionLink("聯絡我們", "ContactUs", "Home")</li>
                <li>
                    @Html.ActionLink("會員專區", "Profilo", "Member")
                    <ul class="subs">
                        <li class="submenu">@Html.ActionLink("基本資料", "Profilo", "Member")</li>
                        <li class="submenu">@Html.ActionLink("通報清單", "myRescuelist", "RescueMember")</li>
                        <li class="submenu">@Html.ActionLink("送養清單", "TransferList", "Member")</li>
                        <li class="submenu">@Html.ActionLink("追蹤清單", "Tracelist", "RescueTraceList")</li>
                        <li class="submenu">@Html.ActionLink("登出", "LogOut", "Member")</li>
                    </ul>
                </li>
            </ul>
            <i class="fas fa-bars"></i>
        </nav>
    </section>
    <div class="d-flex">
        <section class="side-menu">
            <div class="welcome">
                @Session["Welcome"]
                <br />
                歡迎回來
            </div>
            <nav>
                <a class="sidnav" href="@Url.Action("Profilo","Member")"><i class="fas fa-user-alt"></i>基本資料</a>
                <a class="sidnav" href="@Url.Action("myRescuelist","RescueMember")"><i class="fas fa-pen-alt"></i>我的通報</a>
                <a class="sidnav" href="#"><i class="fas fa-pencil-alt"></i>我的送養</a>
                <a class="sidnav" href="#"><i class="fas fa-feather-alt"></i>我的文章</a>
                <a class="sidnav" href="@Url.Action("Tracelist","RescueTraceList")"><i class="fas fa-dog"></i>追蹤通報</a>
                <a class="sidnav" href="#"><i class="fas fa-cat"></i>追蹤送養</a>
                <a class="sidnav" href="#"><i class="fas fa-paw"></i>收藏文章</a>
                <a class="sidnav" href="@Url.Action("LogOut","Member")"><i class="fas fa-sign-out-alt"></i>登出</a>
            </nav>
        </section>
        <div>
            @RenderBody()
        </div>
    </div>
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    <script src="~/Scripts/SubPageLayoutVer2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>