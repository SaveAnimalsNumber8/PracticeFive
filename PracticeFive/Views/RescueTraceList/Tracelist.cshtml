@model IEnumerable<PracticeFive.Models.FollowRescue>

@{
    ViewBag.Title = "Tracelist";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/Tracelist.css">
</head>
<body>
    <div class="container">
        <table class="content-table">
            <thead>
                <tr>
                    <th colspan="3">
                        <i class="fas fa-dog"></i>我的追蹤清單
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{ int count = 0;
                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                <span class="circle-image">
                                    <img src="~/UpImg/@Html.DisplayFor(modelItem => item.tRescue.RescuePictures)" alt="" />
                                </span>
                            </td>
                            <td class="widthcontent300px">
                                @Html.DisplayFor(modelItem => item.tRescue.RescueEvent)
                                <p>
                                    @Html.ActionLink("查看頁面", "More", "RescueMember", new { id = item.tRescue.RescueID }, null)
                                </p>
                            </td>
                            <td class="widthcontent">
                                <p>
                                    @Html.ActionLink("取消追蹤", "DeleteFollow", "RescueTraceList", new { id = item.FollowID }, new { @class = "btn", onclick = "return confirm('取消追蹤嗎?')" })
                                </p>
                            </td>
                        </tr>
                    }

                }

            </tbody>
        </table>
    </div>
</body>