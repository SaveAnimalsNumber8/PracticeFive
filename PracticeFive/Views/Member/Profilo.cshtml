@model PracticeFive.Models.tMember

@{
    ViewBag.Title = "Profilo";
    Layout = "~/Views/Shared/_LayoutMemberZone.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/MemberEdit.css">
</head>
<body class="bodyback">
    <div class="inputbackground">

        <input type="hidden" name="MemberID" value="@Model.MemberID" />
        <div class="contentprofilo">
            <h4><i class="fas fa-user-alt"></i>基本資料</h4>
            <div>會員姓名：</div>
            <div class="contentborder">@Html.DisplayFor(model => model.MemberName)</div>
            <div>帳號：</div>
            <div class="contentborder">@Html.DisplayFor(model => model.MemberAccount)</div>
            <div>最後變更時間：</div>
            <div class="contentborder">@Html.DisplayFor(model => model.Created_At)</div>
            <div>@Html.ActionLink("變更密碼", "MemberEdit", "Member", new { id = Model.MemberID }, new { @class = "btnlist" })</div>
        </div>
    </div>
</body>